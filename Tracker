pragma solidity ^0.8.20;

contract DonationTracker {
    mapping(address => uint256) public donations;
    uint256 public total;

    function donate() external payable {
        require(msg.value > 0, "No ETH sent");
        donations[msg.sender] += msg.value;
        total += msg.value;
    }
}
